extends ../layout.pug
block contenido
  div(class='col-md-5 center-block quitar-float top-space text-left')
    h1 Agregar producto
    form(method='post' action='/menu' style='margin-top:1.5em;' enctype='multipart/form-data')
      div(class='form-group')
        label Nombre
        input(type='text' name='title' placeholder='Nombre del producto' class='form-control')
      div(class='form-group')
        label Decripcion
        textarea(name='description' placeholder='Descripcion del producto' class='form-control')
      div(class='form-group')
        label Costo
        input(type='number' name='pricing' placeholder='Precio' class='form-control')
      div(class='form-group')
        label Imagen del producto
        input(type='file' name='image')
      div(class='form-group')
        label Contrase√±a
        input(type='password' name='password' placeholder='Password' class='form-control')
      div(class='form-group text-right')
        input(type='submit' class='btn btn-info' value='Guardar')
